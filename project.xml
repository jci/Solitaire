<?xml version="1.0" encoding="utf-8"?>
<project>
	<meta title="Solitaire" package="com.example.app" version="1.0.0" company="" />

 	<app file="Main" main="Main" path="bin" />

	<window fps="60" background="0x003333" />
	<window width="640" height="360" resizable="false" if="desktop"/>
	<window width="0" height="0" resizable="false" if="mobile"/>

	<window fullscreen="true" />
	<window orientation="landscape" vsync="true" antialiasing="0" if="cpp" />

	<source path="src" />

	<haxelib name="HaxePunk" />

	<assets path="assets/graphics" rename="graphics" include="*.png|*.jpg" />
	<assets path="assets/audio" rename="audio" include="*.mp3" if="flash" embed="false" />
	<assets path="assets/audio" rename="audio" include="*.wav|*.ogg" unless="flash" embed="false" />
	<assets path="assets/font" rename="font" include="*.ttf" embed="false" />

	<icon path="assets/HaxePunk.svg" />
</project>
